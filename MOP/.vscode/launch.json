	"version": "0.2.0",
	"configurations": [
		{
			"name": "Debug - Windows",
			"type": "gdb",
			"gdbpath": "C:/Program Files (x86)/GMV/Eterm8/arm-none-eabi-gdb",
			"request": "attach",
			"executable": "./debug/MOP",
			"target": ":1234",
			"remote": true,
			"cwd": "${workspaceRoot}",
			"valuesFormatting": "parseText",
			"autorun": [
				"file debug/MOP",
				"target extended-remote localhost:1234",
				"load",
				"monitor restart",
				"b main",
			],
			"preLaunchTask": "build_windows"
		},
		{
			"name": "Debug - Linux",
			"type": "gdb",
			"gdbpath": "gdb-multiarch",
			"request": "attach",
			"executable": "./debug/MOP",
			"target": ":1234",
			"remote": true,
			"cwd": "${workspaceRoot}",
			"valuesFormatting": "parseText",
			"autorun": [
				"file debug/MOP",
				"target extended-remote localhost:1234",
				"load",
				"monitor restart",
				"b main",
			],
			"preLaunchTask": "build_linux"
		}
	]
}
